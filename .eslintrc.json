{
    "env": {
        "browser": false,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "rules": {
        "arrow-parens": [
          "warn",
          "as-needed"
        ],
        "block-scoped-var": "warn",
        "class-methods-use-this": "warn",
        "indent": ["warn", 2],
        "no-extra-parens": "warn",
        "no-shadow": "warn",
        "no-tabs": "warn",
        "no-undef": "warn",
        "no-var": "warn",
        "prefer-arrow-callback": "warn",
        "semi": "warn"
      }
}
